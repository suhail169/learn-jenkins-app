pipeline {
    agent any

    stages {

        /*
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                    '''
               }
        }
        */
        stage('Unit_test'){
            agent{
                 docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    test -f build/index.html
                    npm test
                    '''
            }
        }
         stage('ETE'){
            agent{
                 docker {
                    image 'mcr.microsoft.com/playwright:v1.56.1-noble'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    npm install serve
                    chmod +x node_modules/serve
                    node_modules/serve -s build &
                    sleep 10
                    npx playwright test
                    '''
            }
        }
    }
    post{
        always{
            junit 'jest-results/junit.xml'
        }
    }
}
